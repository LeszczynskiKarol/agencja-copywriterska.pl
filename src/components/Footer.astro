---
const currentYear = new Date().getFullYear();

const footerLinks = {
  uslugi: [
    { label: 'Copywriting', href: '/uslugi/copywriting' },
    { label: 'Pisanie tekstów', href: '/uslugi/pisanie-tekstow' },
    { label: 'Pisanie artykułów', href: '/uslugi/pisanie-artykulow' },
    { label: 'Tworzenie ebooków', href: '/uslugi/tworzenie-ebookow' },
    { label: 'Skład tekstu LaTeX', href: '/uslugi/sklad-tekstu' },
    { label: 'Artykuły sponsorowane', href: '/uslugi/artykuly-sponsorowane' },
  ],
  firma: [        
    { label: 'Blog', href: '/blog' },
    { label: 'Kontakt', href: '/kontakt' },
    { label: 'Polityka prywatności', href: '/polityka-prywatnosci' },
  ],
};
---

<footer class="footer">
  <!-- CTA Section -->
  <div class="footer-cta">
    <div class="container">
      <div class="footer-cta__inner">
        <div class="footer-cta__content">
          <span class="section-label">Gotowy na współpracę?</span>
          <h2 class="footer-cta__title">Zamów <span class="text-gradient">bezpłatną wycenę</span></h2>
          <p class="footer-cta__text">
            Opisz swój projekt, a my przygotujemy dla Ciebie indywidualną ofertę. Odpowiedź w 24 godz.
          </p>
        </div>
        <div class="footer-cta__actions">
          <a href="/kontakt" class="btn btn-primary btn-lg">
            Wyślij zapytanie
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
          <a href="tel:+48509370772" class="btn btn-secondary btn-lg">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            Zadzwoń
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Footer -->
  <div class="footer-main">
    <div class="container">
      <div class="footer-grid">
        <!-- Brand Column -->
        <div class="footer-brand">
          <a href="/" class="footer-logo" aria-label="Strona główna">
            <span class="logo-icon">AC</span>
            <span class="logo-text">
              <span class="logo-text__main">Agencja</span>
              <span class="logo-text__sub">Copywriterska</span>
            </span>
          </a>
          <p class="footer-brand__desc">
            Profesjonalna agencja copywriterska z 15-letnim doświadczeniem. Tworzymy teksty, artykuły, ebooki i kompleksowe publikacje od A do Z.
          </p>
          <div class="footer-contact">
            <a href="mailto:kontakt@agencja-copywriterska.pl" class="footer-contact__item">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
              kontakt@agencja-copywriterska.pl
            </a>
            <a href="tel:+48509370772" class="footer-contact__item">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              +48 509 370 772
            </a>
            <span class="footer-contact__item">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              Toruń, Polska
            </span>
          </div>
        </div>

        <!-- Links Columns -->
        <div class="footer-links">
          <div class="footer-links__col">
            <h3 class="footer-links__title">Usługi</h3>
            <ul class="footer-links__list">
              {footerLinks.uslugi.map((link) => (
                <li>
                  <a href={link.href}>{link.label}</a>
                </li>
              ))}
            </ul>
          </div>
          <div class="footer-links__col">
            <h3 class="footer-links__title">Firma</h3>
            <ul class="footer-links__list">
              {footerLinks.firma.map((link) => (
                <li>
                  <a href={link.href}>{link.label}</a>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <!-- Newsletter / Trust Column -->
        <div class="footer-trust">
          <h3 class="footer-links__title">Dlaczego my?</h3>
          <ul class="footer-trust__list">
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>15+ lat doświadczenia</span>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>5000+ napisanych tekstów</span>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Własne publikacje książkowe</span>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Profesjonalny skład LaTeX</span>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Kompleksowa obsługa A-Z</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom__inner">
        <p class="footer-copyright">
          © {currentYear} Agencja-Copywriterska.pl. Wszelkie prawa zastrzeżone.
        </p>
        <nav class="footer-bottom__nav">
          <a href="/polityka-prywatnosci">Polityka prywatności</a>          
        </nav>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--bg-secondary);
    border-top: 1px solid var(--border-color);
  }

  /* CTA Section */
  .footer-cta {
    padding: var(--space-20) 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, #1a2248 100%);
    position: relative;
    overflow: hidden;
  }

  .footer-cta::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    background: radial-gradient(circle at 70% 50%, rgba(252, 187, 66, 0.15) 0%, transparent 60%);
    pointer-events: none;
  }

  .footer-cta__inner {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  @media (min-width: 768px) {
    .footer-cta__inner {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .footer-cta__content {
    max-width: 600px;
  }

  .footer-cta__content .section-label {
    color: var(--color-accent);
  }

  .footer-cta__title {
    color: var(--color-white);
    margin-bottom: var(--space-4);
  }

  .footer-cta__text {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--fs-lg);
  }

  .footer-cta__actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  @media (min-width: 480px) {
    .footer-cta__actions {
      flex-direction: row;
    }
  }

  .footer-cta__actions .btn-secondary {
    color: var(--color-white);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .footer-cta__actions .btn-secondary:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  /* Main Footer */
  .footer-main {
    padding: var(--space-16) 0;
  }

  .footer-grid {
    display: grid;
    gap: var(--space-12);
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr;
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr 1fr;
    }
  }

  /* Brand */
  .footer-logo {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    text-decoration: none;
    margin-bottom: var(--space-6);
  }

  .footer-logo .logo-icon {
    width: 48px;
    height: 48px;
    font-size: var(--fs-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary) 0%, #1a2248 100%);
    color: var(--color-accent);
    font-family: var(--font-display);
    font-weight: var(--fw-bold);
    border-radius: var(--radius-lg);
  }

  .footer-logo .logo-text {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
  }

  .footer-logo .logo-text__main {
    font-family: var(--font-display);
    font-weight: var(--fw-bold);
    font-size: var(--fs-xl);
    color: var(--text-primary);
  }

  .footer-logo .logo-text__sub {
    font-family: var(--font-display);
    font-weight: var(--fw-medium);
    font-size: var(--fs-sm);
    color: var(--color-accent);
  }

  .footer-brand__desc {
    font-size: var(--fs-base);
    line-height: var(--lh-relaxed);
    margin-bottom: var(--space-6);
    max-width: 350px;
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer-contact__item {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    font-size: var(--fs-sm);
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-contact__item:hover {
    color: var(--color-accent);
  }

  .footer-contact__item svg {
    color: var(--color-accent);
    flex-shrink: 0;
  }

  /* Links */
  .footer-links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
  }

  @media (min-width: 1024px) {
    .footer-links {
      display: contents;
    }
  }

  .footer-links__title {
    font-family: var(--font-display);
    font-size: var(--fs-base);
    font-weight: var(--fw-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .footer-links__list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer-links__list a {
    font-size: var(--fs-sm);
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-links__list a:hover {
    color: var(--color-accent);
  }

  /* Trust */
  .footer-trust__list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer-trust__list li {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: var(--fs-sm);
    color: var(--text-secondary);
  }

  .footer-trust__list svg {
    color: var(--color-accent);
    flex-shrink: 0;
  }

  /* Bottom Bar */
  .footer-bottom {
    padding: var(--space-6) 0;
    border-top: 1px solid var(--border-color);
  }

  .footer-bottom__inner {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    align-items: center;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-bottom__inner {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .footer-copyright {
    font-size: var(--fs-sm);
    color: var(--text-tertiary);
  }

  .footer-bottom__nav {
    display: flex;
    gap: var(--space-6);
  }

  .footer-bottom__nav a {
    font-size: var(--fs-sm);
    color: var(--text-tertiary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-bottom__nav a:hover {
    color: var(--color-accent);
  }
</style>