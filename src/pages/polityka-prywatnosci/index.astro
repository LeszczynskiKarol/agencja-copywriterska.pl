  [data-theme="dark"] .pp-cookie-badge--green { color: #68d391; }
  [data-theme="dark"] .pp-cookie-badge--blue { color: #90cdf4; }
  [data-theme="dark"] .pp-cookie-badge--purple { color: #d6bcfa; }

  .pp-cookie-details {
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    padding: var(--space-4);
    margin: var(--space-4) 0;
  }

  .pp-cookie-row {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    padding: var(--space-2) 0;
  }

  .pp-cookie-row + .pp-cookie-row {
    border-top: 1px solid var(--border-color);
  }

  .pp-cookie-name {
