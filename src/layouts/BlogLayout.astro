---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, publishDate, updateDate, author, category, image, imageAlt } = post.data;

// Format daty
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('pl-PL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};

// Czas czytania
const getReadingTime = (content: string) => {
  const words = content.split(/\s+/).length;
  return Math.ceil(words / 200);
};

const readingTime = getReadingTime(post.body || '');

// Schema.org dla artykułu
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "image": image ? `https://agencja-copywriterska.pl${image}` : undefined,
  "datePublished": publishDate.toISOString(),
  "dateModified": updateDate ? updateDate.toISOString() : publishDate.toISOString(),
  "author": {
    "@type": "Organization",
    "name": author,
    "url": "https://agencja-copywriterska.pl"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Agencja Copywriterska",
    "url": "https://agencja-copywriterska.pl",
    "logo": {
      "@type": "ImageObject",
      "url": "https://agencja-copywriterska.pl/logo.png"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://agencja-copywriterska.pl/blog/${post.slug}`
  }
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Strona główna",
      "item": "https://agencja-copywriterska.pl"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog",
      "item": "https://agencja-copywriterska.pl/blog"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": title,
      "item": `https://agencja-copywriterska.pl/blog/${post.slug}`
    }
  ]
};

const categorySlug = category.toLowerCase().replace(/\s+/g, '-').replace(/ó/g, 'o');
---

<BaseLayout 
  title={`${title} | Blog Agencja Copywriterska`}
  description={description}
>
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  
  <!-- Breadcrumbs -->
  <nav class="breadcrumbs" aria-label="Breadcrumb">
    <div class="container">
      <ol class="breadcrumbs__list">
        <li><a href="/">Strona główna</a></li>
        <li><a href="/blog">Blog</a></li>
        <li aria-current="page">{title}</li>
      </ol>
    </div>
  </nav>

  <article class="blog-post">
    <!-- Hero -->
    <header class="blog-post__header">
      <div class="container">
        <div class="blog-post__meta">
          <a href={`/blog/kategoria/${categorySlug}`} class="blog-post__category">
            {category}
          </a>
          <span class="blog-post__date">{formatDate(publishDate)}</span>
          <span class="blog-post__reading-time">{readingTime} min czytania</span>
        </div>
        <h1 class="blog-post__title">{title}</h1>
        <p class="blog-post__description">{description}</p>
        <div class="blog-post__author">
          <span>Autor:</span> {author}
        </div>
      </div>
    </header>

    <!-- Featured Image -->
    {image && (
      <div class="blog-post__image">
        <div class="container">
          <img src={image} alt={imageAlt || title} loading="eager" />
        </div>
      </div>
    )}

    <!-- Content -->
    <div class="blog-post__content">
      <div class="container">
        <div class="blog-post__body prose">
          <slot />
        </div>
      </div>
    </div>

    <!-- Footer / CTA -->
    <footer class="blog-post__footer">
      <div class="container">
        <div class="blog-post__cta">
          <h3>Potrzebujesz profesjonalnych tekstów?</h3>
          <p>Skontaktuj się z nami i zamów treści, które sprzedają.</p>
          <a href="/kontakt" class="btn btn--primary">
            Zamów bezpłatną wycenę
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
          </a>
        </div>

        <div class="blog-post__nav">
          <a href="/blog" class="blog-post__back">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m15 18-6-6 6-6"/></svg>
            Wróć do wszystkich artykułów
          </a>
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  /* Breadcrumbs */
  .breadcrumbs {
    padding: var(--space-4) 0;
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border);
  }
  
  .breadcrumbs__list {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: var(--text-sm);
    flex-wrap: wrap;
  }
  
  .breadcrumbs__list li {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }
  
  .breadcrumbs__list li:not(:last-child)::after {
    content: "/";
    color: var(--color-text-tertiary);
  }
  
  .breadcrumbs__list a {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .breadcrumbs__list a:hover {
    color: var(--color-accent);
  }
  
  .breadcrumbs__list li[aria-current="page"] {
    color: var(--color-text-primary);
    font-weight: 500;
    max-width: 300px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Blog Post Header */
  .blog-post__header {
    padding: var(--space-16) 0 var(--space-12);
    background: var(--color-bg-primary);
    text-align: center;
  }
  
  .blog-post__header .container {
    max-width: 800px;
  }
  
  .blog-post__meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
    flex-wrap: wrap;
  }
  
  .blog-post__category {
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    background: var(--color-accent-light);
    color: var(--color-accent-dark);
    font-size: var(--text-sm);
    font-weight: 600;
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all 0.2s;
  }
  
  .blog-post__category:hover {
    background: var(--color-accent);
    color: var(--color-primary);
  }
  
  .blog-post__date,
  .blog-post__reading-time {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
  }
  
  .blog-post__title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    color: var(--color-text-primary);
    margin-bottom: var(--space-6);
  }
  
  .blog-post__description {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-6);
  }
  
  .blog-post__author {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
  }
  
  .blog-post__author span {
    color: var(--color-text-secondary);
  }

  /* Featured Image */
  .blog-post__image {
    background: var(--color-bg-secondary);
    padding: var(--space-8) 0;
  }
  
  .blog-post__image .container {
    max-width: 1000px;
  }
  
  .blog-post__image img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
  }

  /* Blog Post Content */
  .blog-post__content {
    padding: var(--space-16) 0;
    background: var(--color-bg-primary);
  }
  
  .blog-post__body {
    max-width: 800px;
    margin: 0 auto;
  }

  /* Prose styles for content */
  .prose {
    font-size: var(--text-lg);
    line-height: 1.8;
    color: var(--color-text-secondary);
  }
  
  .prose :global(h2) {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-top: var(--space-12);
    margin-bottom: var(--space-6);
    line-height: 1.3;
  }
  
  .prose :global(h3) {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-top: var(--space-10);
    margin-bottom: var(--space-4);
    line-height: 1.4;
  }
  
  .prose :global(h4) {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-top: var(--space-8);
    margin-bottom: var(--space-3);
  }
  
  .prose :global(p) {
    margin-bottom: var(--space-6);
  }
  
  .prose :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s;
  }
  
  .prose :global(a:hover) {
    color: var(--color-accent-dark);
  }
  
  .prose :global(strong) {
    color: var(--color-text-primary);
    font-weight: 600;
  }
  
  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: var(--space-6);
    padding-left: var(--space-6);
  }
  
  .prose :global(li) {
    margin-bottom: var(--space-2);
  }
  
  .prose :global(ul li) {
    list-style-type: disc;
  }
  
  .prose :global(ol li) {
    list-style-type: decimal;
  }
  
  .prose :global(blockquote) {
    border-left: 4px solid var(--color-accent);
    padding-left: var(--space-6);
    margin: var(--space-8) 0;
    font-style: italic;
    color: var(--color-text-primary);
  }
  
  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    margin: var(--space-8) 0;
  }
  
  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--space-8) 0;
    font-size: var(--text-base);
  }
  
  .prose :global(th),
  .prose :global(td) {
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--color-border);
    text-align: left;
  }
  
  .prose :global(th) {
    background: var(--color-bg-secondary);
    font-weight: 600;
    color: var(--color-text-primary);
  }
  
  .prose :global(tr:nth-child(even)) {
    background: var(--color-bg-secondary);
  }
  
  .prose :global(code) {
    background: var(--color-bg-secondary);
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
    font-family: monospace;
    font-size: 0.9em;
  }
  
  .prose :global(pre) {
    background: var(--color-primary);
    color: white;
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    overflow-x: auto;
    margin: var(--space-8) 0;
  }
  
  .prose :global(pre code) {
    background: transparent;
    padding: 0;
  }
  
  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: var(--space-12) 0;
  }

  /* Blog Post Footer */
  .blog-post__footer {
    padding: var(--space-16) 0;
    background: var(--color-bg-secondary);
  }
  
  .blog-post__cta {
    max-width: 600px;
    margin: 0 auto var(--space-12);
    text-align: center;
    padding: var(--space-10);
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    border-radius: var(--radius-xl);
    color: white;
  }
  
  .blog-post__cta h3 {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 700;
    margin-bottom: var(--space-3);
  }
  
  .blog-post__cta p {
    opacity: 0.9;
    margin-bottom: var(--space-6);
  }
  
  .blog-post__cta .btn {
    background: var(--color-accent);
    color: var(--color-primary);
  }
  
  .blog-post__cta .btn:hover {
    background: white;
  }
  
  .blog-post__nav {
    text-align: center;
  }
  
  .blog-post__back {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .blog-post__back:hover {
    color: var(--color-accent-dark);
    transform: translateX(-4px);
  }
</style>